			<img src="<?php echo $this->getSkinUrl('images/purchase/grid-cal.gif') ?>" class="v-middle" id="img_calendar_from" />
			<script type="text/javascript">
				Calendar.setup({
					inputField : 'from',
					ifFormat : '%Y-%m-%e',
					button : 'img_calendar_from',
